<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description"
    content="Amazon Product Intelligence Tool - Analyze sales, reviews, pricing, and competition for any Amazon product">
  <title>Amazon Product Intelligence | Deep Product Analytics</title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

  <link rel="stylesheet" href="css/main.css">
  <link rel="stylesheet" href="css/components.css">

  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
</head>

<body>

  <!-- Floating background icons -->
  <div class="floating-icons">
    <div class="floating-icon">üì¶</div>
    <div class="floating-icon">üì±</div>
    <div class="floating-icon">üéß</div>
    <div class="floating-icon">üíª</div>
    <div class="floating-icon">üì¶</div>
    <div class="floating-icon">‚åö</div>
    <div class="floating-icon">üì∑</div>
    <div class="floating-icon">üì¶</div>
    <div class="floating-icon">üéÆ</div>
    <div class="floating-icon">üñ±Ô∏è</div>
    <div class="floating-icon">‚å®Ô∏è</div>
    <div class="floating-icon">üì¶</div>
    <div class="floating-icon">üéí</div>
    <div class="floating-icon">üëü</div>
    <div class="floating-icon">üìö</div>
    <div class="floating-icon">üéµ</div>
    <div class="floating-icon">üì¶</div>
    <div class="floating-icon">üé®</div>
    <div class="floating-icon">‚ö°</div>
    <div class="floating-icon">üõí</div>
  </div>

  <!-- Header -->
  <header class="header">
    <div class="container">
      <nav class="nav">
        <div class="logo">üîç ProductScope</div>
        <div class="flex gap-sm">
          <button class="btn btn-secondary" onclick="showAbout()">About</button>
        </div>
      </nav>
    </div>
  </header>

  <section class="hero">
    <section class="hero">
      <div class="container">
        <h1>Amazon Product Intelligence</h1>
        <p style="font-size: 1.2rem; color: var(--text-secondary); max-width: 600px; margin: 0 auto;">
          Analyze any Amazon product instantly. Get sales estimates, review insights, price history, and competitive
          intelligence.
        </p>

        <div class="search-container">
          <div class="search-box">
            <input type="text" id="productUrl" class="search-input" placeholder="Paste Amazon product URL here..."
              autocomplete="off">
            <button class="search-btn" onclick="analyzeProduct()">
              <span id="searchBtnText">Analyze</span>
            </button>
          </div>

          <div class="example-links">
            <span style="color: var(--text-tertiary); font-size: 0.875rem;">Try these examples:</span>
            <a href="#" class="example-link" onclick="loadExample('B08N5WRWNW'); return false;">AirPods Pro</a>
            <a href="#" class="example-link" onclick="loadExample('B0BSHF7WHW'); return false;">Samsung S24 Ultra</a>
          </div>
        </div>
      </div>
    </section>

    <div id="loadingContainer" class="loading-container">
      <div id="loadingContainer" class="loading-container">
        <div class="container">
          <div class="spinner"></div>
          <p style="color: var(--text-secondary);">Analyzing product data...</p>
        </div>
      </div>

      <div id="resultsContainer" class="results-container">
        <div id="resultsContainer" class="results-container">
          <div class="container">

            <div class="glass-card product-overview">
              <div class="glass-card product-overview">
                <div class="product-image-container">
                  <img id="productImage" src="" alt="Product" class="product-image">
                </div>
                <div class="product-details">
                  <h2 id="productTitle" class="product-title"></h2>

                  <div class="product-meta">
                    <div class="price" id="productPrice"></div>
                    <div class="rating">
                      <span class="stars" id="productStars"></span>
                      <span id="productRating"></span>
                      <span style="color: var(--text-tertiary);" id="productReviews"></span>
                    </div>
                  </div>

                  <div class="quick-stats" id="quickStats">
                    <!-- Stats will be injected here -->
                  </div>

                  <div class="flex gap-sm mt-md">
                    <span class="badge badge-success" id="stockBadge"></span>
                    <span class="badge badge-info" id="bsrBadge"></span>
                    <span class="badge" id="fakeReviewBadge"></span>
                  </div>
                </div>
              </div>

              <div class="dashboard">
                <div class="dashboard">

                  <!-- Sales Chart -->
                  <div class="glass-card">
                    <div class="chart-header">
                      <h3 class="chart-title">üìä Sales Performance</h3>
                      <div class="chart-controls">
                        <button class="chart-control-btn active" onclick="toggleSalesMetric('units')">Units</button>
                        <button class="chart-control-btn" onclick="toggleSalesMetric('revenue')">Revenue</button>
                      </div>
                    </div>
                    <div class="chart-container">
                      <canvas id="salesChart"></canvas>
                    </div>
                  </div>

                  <!-- Price History Chart -->
                  <div class="glass-card">
                    <div class="chart-header">
                      <h3 class="chart-title">üí∞ Price History</h3>
                      <div style="font-size: 0.875rem; color: var(--text-tertiary);">
                        <span id="priceStats"></span>
                      </div>
                    </div>
                    <div class="chart-container">
                      <canvas id="priceChart"></canvas>
                    </div>
                  </div>

                  <!-- Review Analytics -->
                  <div class="glass-card">
                    <div class="chart-header">
                      <h3 class="chart-title">‚≠ê Review Analytics</h3>
                    </div>
                    <div class="review-grid">
                      <div class="rating-distribution" id="ratingDistribution">
                        <!-- Rating bars will be injected here -->
                      </div>
                      <div class="sentiment-container">
                        <div class="sentiment-gauge" id="sentimentGauge">
                          <div class="gauge-circle">
                            <div class="gauge-inner">
                              <div class="sentiment-score" id="sentimentScore"></div>
                              <div class="sentiment-label">Overall</div>
                            </div>
                          </div>
                        </div>
                        <div class="sentiment-breakdown">
                          <div class="sentiment-item">
                            <div class="sentiment-dot positive"></div>
                            <div style="font-size: 0.875rem; font-weight: 600;" id="positivePercent"></div>
                            <div style="font-size: 0.75rem; color: var(--text-tertiary);">Positive</div>
                          </div>
                          <div class="sentiment-item">
                            <div class="sentiment-dot neutral"></div>
                            <div style="font-size: 0.875rem; font-weight: 600;" id="neutralPercent"></div>
                            <div style="font-size: 0.75rem; color: var(--text-tertiary);">Neutral</div>
                          </div>
                          <div class="sentiment-item">
                            <div class="sentiment-dot negative"></div>
                            <div style="font-size: 0.875rem; font-weight: 600;" id="negativePercent"></div>
                            <div style="font-size: 0.75rem; color: var(--text-tertiary);">Negative</div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="mt-lg">
                      <h4 style="margin-bottom: var(--spacing-sm);">Common Themes</h4>
                      <div class="flex gap-sm" style="flex-wrap: wrap;">
                        <div id="positiveThemes"></div>
                      </div>
                      <div class="flex gap-sm mt-sm" style="flex-wrap: wrap;">
                        <div id="negativeThemes"></div>
                      </div>
                    </div>
                  </div>

                  <!-- BSR Trend -->
                  <div class="glass-card">
                    <div class="chart-header">
                      <h3 class="chart-title">üìà Best Seller Rank Trend</h3>
                    </div>
                    <div class="chart-container">
                      <canvas id="bsrChart"></canvas>
                    </div>
                  </div>

                  <!-- Listing Quality Score -->
                  <div class="glass-card">
                    <div class="chart-header">
                      <h3 class="chart-title">‚úÖ Listing Quality Score</h3>
                      <div class="text-gradient" style="font-size: 2rem; font-weight: 700;" id="qualityScore"></div>
                    </div>
                    <div class="grid-2 mt-md" id="qualityFactors">
                      <!-- Quality factors will be injected here -->
                    </div>
                  </div>

                  <!-- Competitor Comparison -->
                  <div class="glass-card">
                    <div class="chart-header">
                      <h3 class="chart-title">üéØ Competitor Comparison</h3>
                    </div>
                    <div style="overflow-x: auto;">
                      <table class="comparison-table">
                        <thead>
                          <tr>
                            <th>Product</th>
                            <th>Price</th>
                            <th>Rating</th>
                            <th>Reviews</th>
                            <th>BSR</th>
                          </tr>
                        </thead>
                        <tbody id="competitorTable">
                          <!-- Competitors will be injected here -->
                        </tbody>
                      </table>
                    </div>
                  </div>

                </div>
              </div>
            </div>

            <script src="js/mock-data.js"></script>
            <script src="js/mock-data.js"></script>
            <script src="js/app.js"></script>
            <script src="js/about-modal.js"></script>

</body>

</html>